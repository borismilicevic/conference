<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean name="speakerRepository" class="com.pluralsight.repository.HibernateSpeakerRepositoryImpl"/>
    <bean name="speakerService" class="com.pluralsight.service.SpeakerServiceImpl" autowire="byType">
<!--        <constructor-arg index="0" ref="speakerRepository"/>-->
    </bean>
</beans>

<!--
 This File is root of entire app configuration.
 Constructor injection guarantees contract between dependencies. Constructor injection is index based unlike setter
 injection which is named based.
 XML autowire injections: by constructor, setter injection by Type (requires unique implementation of a type),
 setter injection by Name (requires correct naming of dependencies)
-->